<%= render 'shared/page_title', title: "Add a New Style" %>

<%= render 'shared/errors', obj: @style %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @style do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.submit 'Add Style', class: "btn btn-success" %>
    <% end %>
  </div>
</div>